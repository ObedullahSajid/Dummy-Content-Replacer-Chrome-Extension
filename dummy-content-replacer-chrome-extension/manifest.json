{
  "manifest_version": 3,
  "name": "Dummy Content Replacer",
  "version": "1.1",
  "description": "Replaces all visible text content with dummy text and allows undo. Now supports custom and multilingual dummy text.",
  "permissions": [
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}